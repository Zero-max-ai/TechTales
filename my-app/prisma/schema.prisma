model Blogs {
    id         String    @id @default(uuid())
    title      String
    content    String
    metaDesc   String?
    user       User?     @relation(fields: [userId], references: [id])
    userId     String?
    created_at DateTime  @default(now())
    updated_at DateTime  @updatedAt
}

enum Role {
    USER
    ADMIN
}
